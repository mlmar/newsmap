{
    "compilerOptions": {
        // Base Options
        "target": "ES2023",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["ES2023"],

        // Path Mapping
        "rootDir": "src",
        "outDir": "dist",

        // Interop & Type Checking
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
